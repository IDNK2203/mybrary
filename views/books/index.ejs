<h2>Search Books</h2>
<form action="/books" method="GET">
  <p>
    <label for="title"> Title </label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= search_opts.title %>"
    />
  </p>
  <p>
    <label for="published_after"> published After </label>
    <input
      type="date"
      id="published_after"
      name="published_after"
      value="<%= search_opts.published_after %>"
    />
  </p>
  <p>
    <label for="published_before"> published Before </label>
    <input
      type="date"
      id="published_before"
      name="published_before"
      value="<%= search_opts.published_before %>"
    />
  </p>
  <button type="submit">Search</button>
</form>
<div>
  <% books.forEach((book)=>{ %>

  <img height="150" width="100" src="<%= book.cover_image_path %>" alt="" />
  <% }) %>
</div>
