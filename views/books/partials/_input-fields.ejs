<p>
  <label for="title"> Title </label>
  <input type="text" id="title" name="title" value="<%= book.title %>" />
</p>

<p>
  <label for="author"> Author</label>
  <select name="author" id="author">
    <% authors.forEach((author)=>{ %> <% if(book.author == author.id){ %>
    <option selected value="<%= author.id %>"><%= author.name %></option>
    <% } %>
    <option value="<%= author.id %>"><%= author.name %></option>
    <% }) %>
  </select>
</p>
<p>
  <label for="publishedAt"> Publish Date</label>
  <input
    type="date"
    name="publishedAt"
    id="publishedAt"
    value="
  <%= book.publishedAt == null ? '' :book.publishedAt.toISOString().split('T')[0] %>"
  />
</p>
<p>
  <label for="page_count"> Page Count</label>
  <input
    type="number"
    name="page_count"
    id="page_count"
    min="1"
    value="<%=book.page_count %>"
  />
</p>
<p>
  <label for="cover_image">Cover Image</label>
  <input class="filepond" type="file" name="cover_image" id="cover_image" />
</p>
<p>
  <label for="description">Description</label>
  <textarea name="description" id="description" cols="30" rows="10">
<%=book.description %> </textarea
  >
</p>
